@model Medico.Challange.Services.Models.PatientViewModel;

<form id="PatientForm">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">@(string.IsNullOrEmpty(Model.Id) ? "Add New" : "Edit") - Patient Detail</h4>
    </div>
    <div class="modal-body form-horizontal">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <select asp-for="Gender" class="form-control">
                    <option value="Pria">- Pria -</option>
                    <option value="Wanita">- Wanita -</option>
                </select>
                @*<input asp-for='Gender' class='form-control'>*@
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PlaceOfBirth" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <input asp-for='PlaceOfBirth' class='form-control'>
                <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <input asp-for='DateOfBirth' class='form-control'>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="save-change">Save changes</button>
    </div>
</form>